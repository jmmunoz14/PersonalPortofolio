<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head.ejs %>

</head>

<body>

    <div class="container">
        <div class="row">

            <div>
                <h1>
                    <%= title %>
                </h1>
                <% for(var i in messages) { %>
                    <div class="flash">
                        <%= messages[i] %>
                    </div>
                    <% } %>

                        <form method="post" action="/users/signup" validate>
                            <div class="form-group">
                                <label style="color: aliceblue;">First Name:</label>
                                <input type="text" name="firstName" value="<%= user.firstName %>"
                                    class="form-control" />
                            </div>
                            <div class="form-group">
                                <label style="color: aliceblue;">Last Name:</label>
                                <input type="text" name="lastName" value="<%= user.lastName %>" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label style="color: aliceblue;">Email:</label>
                                <input type="text" name="email" value="<%= user.email %>" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label style="color: aliceblue;">Username:</label>
                                <input type="text" name="username" value="<%= user.username %>" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label style="color: aliceblue;">Password:</label>
                                <input type="password" name="sign_up_password" value="<%= user.password %>"
                                    class="form-control" />
                            </div>
                            <div class="form-group">
                                <label style="color: aliceblue;">Confirm Password:</label>
                                <input type="password" name="password_confirm" class="form-control" />
                            </div>
                            <br>
                            <div>
                                <input class="btn btn-primary" type="submit" value="Sign-up" />
                            </div>
                        </form>
            </div>
        </div>
    </div>

    <% include ../partials/footer.ejs %>

        <% include ../partials/scripts.ejs %>
</body>


</html>